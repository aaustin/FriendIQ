<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_store_gradient">

    <RelativeLayout
    	android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"        
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_bar_gradient" >
        
        <Button 
            android:id="@+id/cmdNext"
       		android:layout_width="80dp"
            android:layout_height="25dp"               
            android:layout_marginLeft="15dp"     
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:background="@drawable/bg_add_coins"
        	android:paddingLeft="15dp"
        	android:paddingRight="15dp"
        	android:gravity="center"
        	android:text="play"
        	android:textSize="14sp"   />
        
    </RelativeLayout>
    
    <CheckBox 
        android:id="@+id/chkSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:text="select all"
        android:checked="true"
        
        />
    
    
    <ListView 
    	android:id="@+id/friend_list"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/chkSelectAll"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="40dp"
	    android:layout_marginRight="40dp"
	    android:choiceMode="singleChoice"
	    android:divider="#777777"
	    android:dividerHeight="1dp"
	    android:background="#00000000"/>
    
</RelativeLayout>
