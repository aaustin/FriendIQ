<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient" 
    tools:context=".GameActivity" >

    <com.friendiq.android.GameView
        android:id="@+id/gameView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
    <RelativeLayout
    	android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"        
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_bar_gradient" >
        
        <Button 
            android:id="@+id/cmdStore"
       		android:layout_width="wrap_content"
            android:layout_height="20dp"               
            android:layout_marginRight="15dp"     
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:background="@drawable/bg_add_coins"
        	android:paddingLeft="4dp"
        	android:paddingRight="4dp"        	
        	android:text="+ Add Coins"
        	android:textSize="14sp"   />
        
        <TextView 
            android:id="@+id/txtCoins"
       		android:layout_width="wrap_content"
            android:layout_height="20dp"               
        	android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true"        	       	
        	android:text="300 coins"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"/>
            
        <TextView 
            android:id="@+id/txtFriendiq"
       		android:layout_width="wrap_content"
            android:layout_height="20dp"               
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"  
        	android:layout_marginLeft="15dp"      	       	
        	android:text="IQ:"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"
        	android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/txtIQValue"
       		android:layout_width="wrap_content"
            android:layout_height="20dp"               
        	android:layout_toRightOf="@+id/txtFriendiq"
        	android:layout_alignBaseline="@+id/txtFriendiq"
        	android:layout_marginLeft="3dp"      	       	
        	android:text="1"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"/>       
        
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/imgPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

</RelativeLayout>
